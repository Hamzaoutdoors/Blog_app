<div class="header-wrapper d-flex justify-content-around"> 
  <div class="image-container rounded-circle">
    <%=image_tag(image_url(user), alt: "User#{user.id} photo", class: "rounded-circle") %>
  </div>
  <div class="user_container d-flex justify-content-between border border-5">
     <h2><%= user.name %></h2>
     <span>Number of posts: <%= post_counter(user) %></span>
  </div>
</div>
