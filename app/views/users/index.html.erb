<h1 class="container py-5">Welcome to your Blog App</h1>
<% @users.each do |user| %>
  <div class="header-wrapper container d-flex justify-content-around my-3"> 
    <div class="image-container">
      <%=image_tag(image_url(user), alt: "User#{user.id} photo") %>
    </div>
    <%=  link_to user_path(user.id), {class: "user_container d-flex justify-content-between text-decoration-none"} do%>
      <h2><%= user.name %></h2>
      <span>Number of posts: <%= post_counter(user) %></span>
    <%end%>
  </div>
<%end%>
<p class="container py-5 display-4">Thanks for using this Blog App</h1>
